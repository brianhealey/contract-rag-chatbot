# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_COLLECTION_NAME=contract_documents
QDRANT_USE_GRPC=false

# Embedding Configuration
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_EMBEDDING_DIMENSION=384
EMBEDDING_BATCH_SIZE=32
EMBEDDING_DEVICE=cpu

# Chunking Configuration
CHUNKING_CHUNK_SIZE=1000
CHUNKING_CHUNK_OVERLAP=200

# Reranking Configuration
RERANK_MODEL_NAME=cross-encoder/ms-marco-MiniLM-L-6-v2
RERANK_DEVICE=cpu

# Retrieval Configuration
RETRIEVAL_TOP_K=20
RETRIEVAL_RERANK_TOP_K=5
RETRIEVAL_HYBRID_ALPHA=0.5
RETRIEVAL_USE_RERANKING=true

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_TEMPERATURE=0.1
OLLAMA_TIMEOUT=120

# Cache Configuration
CACHE_CACHE_DIR=./cache
CACHE_EMBEDDING_CACHE_TTL=0
CACHE_QUERY_CACHE_TTL=3600
CACHE_ENABLE_QUERY_CACHE=true

# Document Configuration
DOCUMENT_DOCUMENTS_DIR=./documents
DOCUMENT_DATA_DIR=./data
